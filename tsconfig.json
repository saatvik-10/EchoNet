{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "./backend/dist",
    "rootDir": "./backend",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
//   "ts-node": {
//     "esm": true
//   },
  "include": ["backend/src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}